{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block content %}

    <div class="container">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success" role="alert">{{ flash_error }}</div>
        {% endfor %}
    </div>

    <section class="mt-4">
        {% for article in articles0 %}
        <div class="container">
            <h1 class="text-center mt-4 mb-4">Dernière publication</h1>

            <div class="row  d-flex">
                <div class="col">
                    <img src="{{ vich_uploader_asset(article, 'imageFile') | imagine_filter('post') }}" alt="" style="height: 25rem;" class="w-100">
                </div>

                <div class="col">
                    <h3>{{ article.titre }}</h3>
                    <h6 class="card-subtitle text-muted">{{ article.user }}</h6>
                    <div class="justify-content-between">
                        <p>{{ article.contenu | striptags | u.truncate(600, '...', false) }}</p>
                    </div>

                    <div class="text-muted">
                        <p>Mis à jour le {{ article.updatedAt ? article.updatedAt|format_datetime('full', locale='fr') : article.createdAt ? article.createdAt|format_datetime('full', locale='fr') }}</p>
                    </div>
                    <div class="">
                        <a href="{{ path('app_article_show', {'id': article.id}) }}" class="btn btn-outline-primary">Lire la suite</a>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </section>
    
    <div class="section">

        <div class="container">

            <div class="row">

                <div class="col-8">
                    <section class="mt-3">
                        <div class="container">
                            <h1 class="">Articles récent</h1>
                            <div class="row g-3">
                                {% for article in articles %}
                                    <div class="card mb-3">
                                        <div class="row g-0">
                                            <div class="col-md-4">
                                                <img src="{{ vich_uploader_asset(article, 'imageFile') | imagine_filter('card_thumb') }}" class="img-fluid rounded-start w-100 h-100" alt="...">
                                            </div>
                                            <div class="col-md-8">
                                                <div class="card-body">
                                                    <h5 class="card-title">{{ article.titre }}</h5>
                                                    <p class="card-text">{{ article.contenu | striptags | u.truncate(200, '...', false) }}</p>
                                                    <div class="row align-items-end">
                                                        <div class="col-4">
                                                            <a href="{{ path('app_article_show', {'id': article.id}) }}" class="btn btn-primary">Lire Plus</a>
                                                        </div>
                                                        <div class="col-8">
                                                            <p class="card-text"><small class="text-muted">Mis à jour le {{ article.updatedAt ? article.updatedAt|format_datetime('full', locale='fr') : article.createdAt ? article.createdAt|format_datetime('full', locale='fr') }}</small></p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                            <div class="row mb-4 mt-4 justify-content-center">
                                <div class="col-4">
                                    <a href="" class="btn btn-secondary">Voir plus de Allakro</a>
                                </div>
                                <div class="col-4">
                                    <a href="" class="btn btn-outline-success">Voir tous les article</a>
                                </div>
                            </div>
                        </div>
                    </section>

                    <section class="mt-3">
                        <div class="container">
                            <h1 class="">Articles UVCI</h1>
                            <div class="row g-3">
                                {% for article in articles2 %}
                                    <div class="card mb-3">
                                        <div class="row g-0">
                                            <div class="col-md-4">
                                                <img src="{{ vich_uploader_asset(article, 'imageFile') | imagine_filter('card_thumb') }}" class="img-fluid rounded-start h-100 w-100" alt="...">
                                            </div>
                                            <div class="col-md-8">
                                                <div class="card-body">
                                                    <h5 class="card-title">{{ article.titre }}</h5>
                                                    <p class="card-text">{{ article.contenu | striptags | u.truncate(200, '...', false) }}</p>
                                                    <div class="row align-items-end">
                                                        <div class="col-4">
                                                            <a href="{{ path('app_article_show', {'id': article.id}) }}" class="btn btn-primary">Lire Plus</a>
                                                        </div>
                                                        <div class="col-8">
                                                            <p class="card-text">
                                                                <small class="text-muted">Mis à jour le {{ article.updatedAt ? article.updatedAt|format_datetime('full', locale='fr') : article.createdAt ? article.createdAt|format_datetime('full', locale='fr') }}
                                                                </small>
                                                            </p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                            <div class="row mb-4 mt-4 justify-content-center">
                                <div class="col-4">
                                    <a href="" class="btn btn-secondary">Voir plus de UVCI</a>
                                </div>
                                <div class="col-4">
                                    <a href="" class="btn btn-outline-success">Voir tous les article</a>
                                </div>
                            </div>
                        </div>
                    </section>

                </div>

                <div class="col-4">
                    {% include 'article/partial/_side.html.twig' %}
                </div>

            </div>

        </div>

    </div>

{% endblock %}

