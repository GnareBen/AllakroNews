                                        <input type="text" class="form-control form-control-sm" name="prenom" id="prenom" placeholder="votre prenom">
                                    </div>
                                </div>

                                <div class="row mb-2">
                                    <div class="col-12">
                                        <input type="email" class="form-control form-control-sm" name="email" id="email" placeholder="Votre addresse Email">
                                    </div>
                                </div>

                                <div class="row mb-2">
                                    <div class="col-12">
                                        <textarea name="content" class="form-control" id="content" rows="6" placeholder="Ecrivez votre message ici"></textarea>
                                    </div>
                                </div>
                            </form>
                            <a href="" class="btn btn-outline-primary">Envoyer Votre message</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div class="container">
