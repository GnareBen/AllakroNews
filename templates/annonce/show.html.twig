{% extends 'base.html.twig' %}

{% block title %}Annonce{% endblock %}
{% block carousel%}{% endblock %}

{% block content %}
    <h1>Annonce</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ annonce.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ annonce.titre }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ annonce.contenu }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ annonce.slug }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ annonce.image }}</td>
            </tr>
            <tr>
                <th>Is_published</th>
                <td>{{ annonce.isPublished ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Is_valid</th>
                <td>{{ annonce.isValid ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ annonce.createdAt ? annonce.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ annonce.updatedAt ? annonce.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_annonce_index') }}">back to list</a>

    <a href="{{ path('app_annonce_edit', {'id': annonce.id}) }}">edit</a>

    {{ include('annonce/_delete_form.html.twig') }}
{% endblock %}
