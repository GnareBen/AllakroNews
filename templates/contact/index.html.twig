<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    {% block stylesheets %}{{ encore_entry_link_tags('app') }}{% endblock %}
    {% block javascripts %}{{ encore_entry_script_tags('app') }}{% endblock %}
    <title>Nous - contacter</title>
</head>
<body>

{% for message in app.flashes('success') %}
    <div class="alert alert-success col-12 text-center">
        {{ message }} <a href="{{ path('app_home') }}">Retourner Ã  l'accueil</a>
    </div>
{% endfor %}

    <div class="container vh-100 d-flex flex-column justify-content-center align-items-center ">

        <h1 class="mb-5">Nous Contacter</h1>
        
        <div class="row">

            <div class="col-6">
                <img src="{{ asset('Images/App/Formulaires/Contact.jpg') }}" class="w-100" alt="">
            </div>
            
            <div class="col-6">

                {{ form_start(form) }}

                <div class="row g-3">
                    {{ form_row(form.nom) }}
                    {{ form_row(form.prenoms) }}
                </div>

                <div class="row">
                    {{ form_row(form.numero) }}
                    {{ form_row(form.objet) }}
                </div>

                <div class="row">
                    {{ form_row(form.contenu) }}
                </div>

                <div class="col-6 mt-2 ">
                    <button class="btn btn-primary me-3" type="submit">Envoyer votre message</button>
                {{ form_end(form) }}
                
            </div>

        </div>

    </div>

</body>
</html>
